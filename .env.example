# ── Required ──────────────────────────────────────────────
SECRET_KEY=             # Random string, e.g. openssl rand -hex 32
DATABASE_URL=           # Railway Postgres: postgres://user:pass@host:port/db
REDIS_URL=              # Railway Redis: redis://default:pass@host:port

# ── App ───────────────────────────────────────────────────
APP_ENV=production
PORT=5000               # Railway sets this automatically

# ── AI Provider ───────────────────────────────────────────
TOGETHER_API_KEY=       # Together AI key for DeepSeek-R1
DEFAULT_PROVIDER=together_ai
DEFAULT_MODEL=deepseek-r1
LOCAL_MODELS_ENABLED=false

# ── Summarization ────────────────────────────────────────
DEFAULT_NUM_SENTENCES=5
MIN_SENTENCES=1
MAX_SENTENCES=20

# ── Auth ──────────────────────────────────────────────────
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# ── CORS ─────────────────────────────────────────────────
CORS_ALLOWED_ORIGINS=   # Comma-separated origins, e.g. https://example.com,https://app.example.com

# ── Rate Limiting ─────────────────────────────────────────
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_WINDOW_SECONDS=60

# ── Observability (optional) ─────────────────────────────
SENTRY_DSN=
METRICS_ENABLED=true
LOG_LEVEL=INFO

STORAGE_LIMIT_BYTES=1073741824
